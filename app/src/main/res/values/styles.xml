<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewAppearance" parent="Theme.MaterialComponents">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>
    
    <style name="EditTextStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_14sdp</item>
        <item name="hintTextColor">@color/grey_900</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>


    <style name="Button.Solid" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/button_solid_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Title" parent="Theme.MaterialComponents">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>


</resources>